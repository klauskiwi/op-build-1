menuconfig BR2_PACKAGE_ALTERNATE_TOOLCHAIN
	bool "alternate-toolchain"
	help
	  Use an Alternate Toolchain to be used by certain
	  packages versus the default buildtoot toolchain

if BR2_PACKAGE_ALTERNATE_TOOLCHAIN
choice
	prompt "Alternate Toolchain Type"
	help
	  Select the type of the Alternate Toolchain to use

source "$BR2_EXTERNAL_OP_BUILD_PATH/package/alternate-toolchain-internal/Config.in"

endchoice

config BR2_PACKAGE_HAS_ALTERNATE_TOOLCHAIN
	bool

config BR2_PACKAGE_PROVIDES_ALTERNATE_TOOLCHAIN
	depends on BR2_PACKAGE_HAS_ALTERNATE_TOOLCHAIN
	string

endif
